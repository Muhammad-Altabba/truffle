{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2016",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2019"],
    "rootDir": ".",
    "types": ["node", "mocha"],
    "typeRoots": [
      "./typings",
      "../../node_modules/@types/node",
      "../../node_modules/@types/mocha",
      "../../node_modules/@types/assert"
    ]
  },
  "include": [
    "./**/*.ts",
    "./typings/**/*.d.ts"
  ]
}
